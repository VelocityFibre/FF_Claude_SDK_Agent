# EditorConfig is awesome: https://EditorConfig.org
# This file ensures consistent coding standards across different editors/IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_size = 2
insert_final_newline = false

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks
max_line_length = 80
indent_size = 2

# TypeScript/JavaScript (Convex)
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Git config files
[.git*]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 0
insert_final_newline = true

# Environment files
[.env*]
insert_final_newline = false

# Claude-specific files
[.claude/**/*.{md,yaml,json}]
indent_size = 2

# Legacy files (don't modify)
[legacy/**]
insert_final_newline = ignore
trim_trailing_whitespace = ignore

# Data files (preserve as-is)
[data/*.json]
insert_final_newline = ignore
trim_trailing_whitespace = ignore

# Test files
[tests/**/*.py]
max_line_length = 120  # Allow longer lines in tests for readability