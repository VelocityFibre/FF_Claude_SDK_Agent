# Backend Environment Variables
# Copy this to .env and fill in your actual values

# Required: Anthropic API Key
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Required: Neon Database Connection String
# Get from: Your Neon dashboard
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Optional: API Key for securing the backend
# Generate a random string, share with Next.js frontend
AGENT_API_KEY=your-random-api-key-here

# Optional: Allowed CORS origins (comma-separated)
# Update with your Next.js deployment URL
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Optional: Port (Railway/Render set this automatically)
PORT=8000

# Optional: Debug mode
DEBUG=False
